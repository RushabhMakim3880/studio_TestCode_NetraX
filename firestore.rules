
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public, read-only access to hosted phishing pages.
    // This is necessary for the /api/phish/[id] route to function.
    match /hostedPages/{pageId} {
      allow read: if true;
      allow write: if false; // Should only be written from server-side actions
    }

    // Default secure rule for all other collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
